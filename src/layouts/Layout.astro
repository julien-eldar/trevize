---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Guiding Humanity in the Age of Superintelligence" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<div class="stars"></div>
		<div class="content">
			<slot />
		</div>
	</body>
</html>
<style is:global>
	:root {
		--accent: 88, 166, 255;
		--accent-light: 179, 217, 255;
		--accent-dark: 23, 46, 71;
		--text: 226, 232, 240;
		--background: 10, 14, 20;
	}
	
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		font-family: 'Space Grotesk', system-ui, sans-serif;
		background: rgb(var(--background));
		color: rgb(var(--text));
		scroll-behavior: smooth;
	}

	body {
		min-height: 100vh;
		overflow-x: hidden;
	}

	.content {
		position: relative;
		z-index: 1;
	}

	.stars {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		pointer-events: none;
		background: radial-gradient(circle at center, 
			rgba(var(--accent-light), 0.1) 0%,
			rgba(var(--background), 0) 100%);
		opacity: 0.5;
	}

	.stars::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-image: 
			radial-gradient(2px 2px at 20px 30px, rgb(var(--accent-light)) 50%, rgba(0,0,0,0)),
			radial-gradient(2px 2px at 40px 70px, rgb(var(--accent-light)) 50%, rgba(0,0,0,0)),
			radial-gradient(2px 2px at 50px 160px, rgb(var(--accent-light)) 50%, rgba(0,0,0,0)),
			radial-gradient(2px 2px at 90px 40px, rgb(var(--accent-light)) 50%, rgba(0,0,0,0)),
			radial-gradient(2px 2px at 130px 80px, rgb(var(--accent-light)) 50%, rgba(0,0,0,0));
		background-repeat: repeat;
		background-size: 200px 200px;
		animation: stars 100s linear infinite;
		opacity: 0.3;
	}

	@keyframes stars {
		from { transform: translateY(0); }
		to { transform: translateY(-100%); }
	}

	.gradient-text {
		background: linear-gradient(45deg, 
			rgb(var(--accent-light)) 0%, 
			rgb(var(--accent)) 50%, 
			rgb(var(--accent-light)) 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 200% auto;
		animation: gradient 8s linear infinite;
	}

	@keyframes gradient {
		0% { background-position: 0% 50%; }
		50% { background-position: 100% 50%; }
		100% { background-position: 0% 50%; }
	}

	.container {
		max-width: 900px;
		margin: 0 auto;
		padding: 0 1.5rem;
	}

	.section {
		padding: 6rem 0;
	}

	h1, h2, h3 {
		line-height: 1.2;
		font-weight: 700;
	}

	p {
		line-height: 1.6;
		margin: 1.5rem 0;
		font-weight: 300;
	}
</style>