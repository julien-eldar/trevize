---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
---

<Layout title="Contact - Re-School">
	<main class="pt-32">
		<section class="py-20">
			<div class="container mx-auto px-6">
				<h1 class="text-4xl font-bold text-center mb-12">Contactez-Nous</h1>
				<div class="max-w-2xl mx-auto">
					<div class="grid grid-cols-1 md:grid-cols-2 gap-12 mb-12">
						<div>
							<h2 class="text-2xl font-semibold mb-4">Coordonnées</h2>
							<div class="space-y-4 text-gray-600">
								<p>
									<strong class="block">Email:</strong>
									contact@re-school.fr
								</p>
								<p>
									<strong class="block">Téléphone:</strong>
									+33 6 22 91 54 75
								</p>
							</div>
						</div>
						<div>
							<h2 class="text-2xl font-semibold mb-4">Horaires</h2>
							<p class="text-gray-600">
								Du lundi au vendredi<br>
								9h00 - 18h00
							</p>
						</div>
					</div>
					<ContactForm />
				</div>
			</div>
		</section>
	</main>
</Layout>